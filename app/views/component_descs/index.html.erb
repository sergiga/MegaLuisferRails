<% provide(:title, 'Descripción de componentes.') %>

<div class="row">
  <div class="col-md-12">
    <div class="box">
      <div class="box-header hd-primary">
        Descripciones
      </div>
      <div class="box-content box-content-separator">
      <%= link_to "Nuevo componente", new_component_desc_path, class: "btn btn-primary btn-flat btn-new-table-row" %>
      	<table class="table table-bordered" style="width:100%">
      		<thead>
      			<tr>
      				<th>Tipo</th>
      				<th>Marca</th>
      				<th>Modelo</th>
      				<th>Descripción</th>
      				<th>Cantidad</th>
              <th>Acción</th>
      			</tr>
      		</thead>
      		<tbody>
      			<tr>
      				<% @component_descs.each do |component_desc| %>
      					<tr>
      						<td><%= component_desc.componentType %></td>
      						<td><%= component_desc.brand %></td>
      						<td><%= component_desc.model %></td>
      						<td><%= component_desc.features %></td>
      						<td><%= component_desc.alert %></td>
                  <td class="table-btn-field-2">
                    <%= link_to edit_component_desc_path(component_desc), class: 'table-btn pos-2' do %>
                      <em class="icon-pencil"></em>
                    <% end %>
                    <%= link_to component_desc, method: :delete,
                                          data: { confirm: "¿Estas seguro de borrar #{component_desc.model}?"},
                                          class: 'table-btn pos-1' do %>
                      <em class="icon-trash"></em>
                    <% end %>
                  </td>
      					</tr>
      				<% end %>
      			</tr>
      		</tbody>
      	</table>
      </div>
    </div>
  </div>
</div>
