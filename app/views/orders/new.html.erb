<% provide(:title, 'Nueva venta') %>

<div class="row">
  <div class="col-md-6">
    <div class="box">
      <div class="box-header hd-primary">
        Cliente
        <%= form_tag search_clients_path, class: "box-header-search", id: 'client_search_bar', method: :get, remote: true do %>
          <%= text_field_tag :search, "", class: "form-control" %>
          <%= button_tag id: "search", class: "form-control" do %>
            <em class="icon-magnifier"></em>
          <% end %>
        <% end %>
      </div>
      <div class="box-content" id="box-search-content", style="display:none">
        <div id="repair-client-form"></div>
      </div>
    </div>

    <div class="btn-inline-group">
      <%= link_to "Reparacion", new_repair_path, class: 'btn btn-inline-3 btn-primary', remote: true %>
      <%= link_to "Componente", new_repair_path, class: 'btn btn-inline-3 btn-primary', remote: true %>
      <%= link_to "Otros", new_repair_path, class: 'btn btn-inline-3 btn-primary', remote: true %>
    </div>

    <div class="box" id="order-item-box" style="display:none">
      <div class="box-header hd-primary">
        <span id="order-item-header"></span>
      </div>
      <div class="box-content">
        <div id="order-item-form">

        </div>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="box">
      <div class="box-header hd-green">
        Resumen de venta
      </div>
      <div class="box-content">
        <div id="repairs">
          <%= render @order.repairs %>
        </div>
        <%= form_for(@order, html: { class: "inline-form" }) do |f| %>
          <div class="form-group inline-group">
            <%= f.label :price, 'Precio' %>
            <%= f.number_field :price, class: 'form-control', step: 0.1, min: 0 %>
            <%= f.submit "Terminar", class: "btn btn-primary btn-inline" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
