<% if @client.new_record? %>
  <% if @client.errors[:cif_dni].any? %>
    $('#client_cif_dni').css('border-color', '#DD4B39')
    $('#client_cif_dni_error').text("<%= escape_javascript(@client.errors[:cif_dni].first).html_safe %>");
  <% end %>

  <% if @client.errors[:name].any? %>
    $('#client_name').css('border-color', '#DD4B39')
    $('#client_name_error').text("<%= escape_javascript(@client.errors[:name].first).html_safe %>");
  <% end %>

  <% if @client.errors[:address].any? %>
    $('#client_address').css('border-color', '#DD4B39')
    $('#client_address_error').text("<%= escape_javascript(@client.errors[:address].first).html_safe %>");
  <% end %>

  <% if @client.errors[:contact_phone].any? %>
    $('#client_contact_phone').css('border-color', '#DD4B39')
    $('#client_contact_phone_error').text("<%= escape_javascript(@client.errors[:contact_phone].first).html_safe %>");
  <% end %>

  <% if @client.errors[:"bills.price"].any? %>
    $('#client_bills_attributes_0_price').css('border-color', '#DD4B39')
    $('#bill_price_error').text("<%= escape_javascript(@client.errors[:"bills.price"].first).html_safe %>");
  <% end %>

  <% if @client.errors[:"bills.repairs.description"].any? %>
    $('#client_bills_attributes_0_repairs_attributes_0_description').css('border-color', '#DD4B39')
    $('#repair_description_error').text("<%= escape_javascript(@client.errors[:"bills.repairs.description"].first).html_safe %>");
  <% end %>
<% else %>
  <%= escape_javascript(render home_path) %>
<% end %>
