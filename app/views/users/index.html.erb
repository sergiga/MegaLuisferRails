<% provide(:title, 'Gestión de Usuarios') %>
<% provide(:description, 'Página principal de Gestión de Usuarios.') %>
<div class="row">
  <div class="col-md-12">
    <div class="widget">
      <div class="widget-header bg-white">
        <h3>USUARIOS REGISTRADOS</h3>
      </div>
      <div class="widget-content bg-white">
        <%= link_to "Nuevo usuario", new_user_path,class: "btn btn-primary btn-flat btn-new-user" %>
        <table class="table" style="width:100%">
          <thead>
            <tr>
              <th>Nombre</th>
              <th>Email</th>
              <th>Status</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <% @users.each do |user| %>
                <tr>
                  <td><%= user.name %></td>
                  <td><%= user.email %></td>
                  <td>Admin</td>
                  <td>
                    <%= link_to "", user, method: :delete,
                                          data: { confirm: "¿Estas seguro de borrar a " + user.name + "?"},
                                          class: "table-icon icon-trash" %>
                    <%= link_to "", edit_user_path(user), class: "table-icon icon-pencil" %>
                  </td>
                </tr>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
