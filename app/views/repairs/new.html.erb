<% provide(:title, 'Registro Reparacion') %>

<div class="row">
  <div class="col-md-12">
    <div class="box">
      <div class="box-header hd-primary">
        Cliente
        <%= form_tag search_client_repairs_path, class: "box-header-search", method: :get, remote: true do %>
          <%= text_field_tag :search, "", class: "form-control" %>
          <%= button_tag id: "search", class: "form-control" do %>
            <em class="icon-magnifier"></em>
          <% end %>
        <% end %>
      </div>
      <div class="box-content" id="box-search-content">
        <div id="repair-client-form"></div>
        <div id="client-errors"></div>
      </div>
    </div>
  </div>
</div>
